.shop-scroll-wrapper{
  display: flex;
  width: 100%;
  height: 100%;
}
#fru {
  padding-left: 20px;
  line-height: 30px;
  height: 30px;
  width: 100%;
  background-color: #9999;
}
.list{
  flex: 1;
  width: 100%;
}
.list .item {
  display: flex;
  margin-top: 30rpx;
}
.content {
  display: flex;
  flex: 1;
  font-size: 26rpx;
  flex-direction: column;
}
.content .control{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-right: 40rpx;
}
.content .control text{
  margin: 0 5px 0 5px
}
.list .item .img {
  margin-left: 10px;
  margin-right: 20px;
}
#veg {
  padding-left: 20px;
  line-height: 30px;
  height: 30px;
  width: 100%;
  background-color: #9999;
}
.van-sidebar-item--selected{
  border-color: #1c92d2 !important;
}
.icon{
  background-color:#1c92d2 ;
  border-radius: 50%;
}