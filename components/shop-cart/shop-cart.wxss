.shop-cart{
  width: 100%;
  height: 50px;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 0;
}
.shop-cart .container{
  position: relative;
  z-index: 10;
}
.shop-cart .container .wrapper{
  background-color: #F0F2F5;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 50px;
}
.shop-cart .icon {
  position: absolute;
  top: -17px;
  left: 5%;
  width: 55px;
  height: 55px;
  background-color: white;
  border-radius: 50%;
  text-align: center;
  border: 2px solid #1c92d2;
  z-index: 0;
}
.shop-cart .icon .van{
  line-height: 55px;
}
.shop-cart .total {
  position: absolute;
  top: 10px;
  left: 25%;
  z-index: 10;
}
.shop-cart .but {
  position: absolute;
  top: 10px;
  right: 10px;
  z-index: 10;
}
.shop-cart .list{
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: auto;
  z-index: -1;
}