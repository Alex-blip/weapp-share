.shop-cart{
  width: 100%;
  height: 50px;
  background-color: #F0F2F5;
  position: relative;
}
.shop-cart .icon {
  position: absolute;
  top: -22px;
  left: 5%;
  width: 60px;
  height: 60px;
  background-color: white;
  border-radius: 50%;
  text-align: center;
  border: 2px solid #1c92d2;
}
.shop-cart .icon .van{
  line-height: 60px;
}
.shop-cart .total {
  position: absolute;
  top: 10px;
  left: 25%;
}