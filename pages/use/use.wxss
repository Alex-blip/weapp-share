.use{
  width: 100%;
}
.head{
  width: 100%;
  height: 300px;
  position: relative;
}
.head .background{
  width: 100%;
  background-color: #1c92d2;
  height: 300px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  opacity: 0.6;
  filter: blur(10px);
}
.head .use{
  position: absolute;
  top: 20px;
  width: 200px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  font-weight: 700;
  z-index: 5;
}
.head .use .image{
  width: 150px;
  height: 150px;
  border-radius: 50%;
  margin-bottom: 20px;
}
.head .use .nickname{
  margin-bottom: 20px;
}
.container{
  width: 100%;
  margin-top: 30px;
}
.scroll{
  width: 100%;
}
.scroll .item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  height: 40px;
  padding-right: 10px;
}
.scroll .item text{
  width: 35%;
}
.scroll .item text:nth-child(1){
  margin-left: 20px;
}