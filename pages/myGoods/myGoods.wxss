.myGood{
  width: 100%;
  height: 100%;
}

.scroll{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 12%;
}
.scroll .list .item{
  width: 95%;
  min-height: 200rpx;
  background-color: white;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04);
  border-radius: 10px;
  margin:0 auto;
  margin-top: 15px;
  margin-bottom: 15px;
}
.scroll .list .item .head{
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-bottom: 1px solid #DCDFE6;
  font-size: 26rpx;
}
.scroll .list .item .head .user{
  display: flex;
  align-items: center;
}
.scroll .list .item .container{
  display: flex;
  margin: 30rpx 20rpx 0 20rpx;
  align-items: center;
  
}
.scroll .list .item .container .content{
  flex: 1;
  width: 200rpx;
  font-size: 32rpx;
  margin-left: 20px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.scroll .list .item .bottom{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
}
.but{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 12%;
}
.but .vanButton{
  width: 80%;
  margin-top: 3%;
}